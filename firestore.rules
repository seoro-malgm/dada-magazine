service cloud.firestore {
  match /databases/{database}/documents {
    match /{path}/{item} {
      allow get, read;
    }
    match /{path}/{item} {
      // allow create: if path == 'subscribers';
      // allow create: if path == 'discussionApply';
      allow create: if path == 'users';
      allow create, update, delete: if request.auth != null;
    }
  }
}